        <script>
            const categoryFields = {
                "1": ["Color", "CPU", "Ram", "ManHinh", "HeDieuHanh", "CameraSau", "CameraTruoc", "Sim", "DungLuong"], // iPhone
                "2": ["Color", "KetNoi", "ChatLuongAmThanh", "ThoiLuongPin"], // AirPods
