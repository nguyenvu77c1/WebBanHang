@model GioHangViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment details</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #C1BFFA;
            font-family: inter, sans-serif;
            margin: 0;
            height: 100vh;
        }

        .container {
            width: 400px;
            padding: 30px;
            background-color: white;
            border: 2px solid #1B1B1B;
            border-radius: 8px;
            box-shadow: 6px 6px 0px #1B1B1B;
        }

        .heading {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        #exit {
            margin-left: auto;
            cursor: pointer;
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 800;
            margin-left: 10px;
        }

        label {
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
        }

        input[type="text"],
        input[type="tel"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 2px solid #1B1B1B;
            border-radius: 8px;
            transition: border-color 0.3s;
        }

            input[type="text"]:focus,
            input[type="tel"]:focus,
            textarea:focus {
                outline: none;
                border-color: #F9E450;
            }

        .btn {
            background-color: #F9E450;
            border: 2px solid #1B1B1B;
            border-radius: 16px;
            padding: 15px 30px;
            font-weight: 800;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn:hover {
                background-color: #FFBB38;
                border-color: #1B1B1B;
            }
    </style>
</head>
<body>

    <form asp-action="ThanhToan" method="post">
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="heading"> 
                <h1>Payment details</h1>
            </div>

            <div class="mb-3">
                <label for="name">Họ và tên *</label>
                <input asp-for="HoaDon.Name" type="text" id="name" required />
            </div>

            <div class="mb-3">
                <label for="address">Địa chỉ *</label>
                <input asp-for="HoaDon.Address" type="text" id="address" placeholder="Số nhà và tên đường" required />
            </div>

            <div class="mb-3">
                <label for="phone">Số điện thoại *</label>
                <input asp-for="HoaDon.PhoneNumber" type="tel" id="phone" required />
            </div>

            <!-- New fields for shipping address and note -->
            <div class="mb-3">
                <label for="shippingAddress">Địa chỉ giao hàng *</label>
                <input asp-for="HoaDon.ShippingAddress" type="text" id="shippingAddress" required />
            </div>

            <div class="mb-3">
                <label for="note">Ghi chú</label>
                <textarea asp-for="HoaDon.Note" id="note"></textarea>
            </div>

            <button type="submit" class="btn">Submit</button>
            <button type="button" onclick="window.location.href='@Url.Action("Index")'" class="btn">Trở về</button>
        </div>
    </form>
</body>
</html>
