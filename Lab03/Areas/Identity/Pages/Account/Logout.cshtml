@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="container py-4">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn đăng xuất không?');">
                <button type="submit" class="btn btn-primary">Nhấn vào đây để đăng xuất</button>
            </form>
        }
        else
        {
            <p>Bạn đã đăng xuất khỏi ứng dụng thành công.</p>
        }
    }
</header>
