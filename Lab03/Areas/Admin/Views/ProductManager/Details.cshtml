@model Lab03.Models.Inventory
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Product Details";
}


<h2>Product Details</h2>

<div class="form-group">
    <label>Tên sản phẩm:</label>
    <p class="form-control-static">@Model.SupplierProduct.ProductName ?? "N/A"</p>
</div>

<div class="form-group">
    <label>Giá:</label>
    <p class="form-control-static">@String.Format("{0:#,##0} VNĐ", Model.SellingPrice )</p>
</div>

<div class="form-group">
    <label>Mô tả:</label>
    <p class="form-control-static">@Model.SupplierProduct.Description ?? "N/A"</p>
</div>

<div class="form-group">
    <label>Thể loại:</label>
    <p class="form-control-static">@ViewBag.CategoryName ?? "N/A"</p>
</div>

<div class="form-group">
    <label>Hình ảnh:</label>
    <img src="~/images/@Model.SupplierProduct.ProductImages" alt="Product Image" style="max-width: 200px;" />
</div>

<div class="form-group">
    <label>Thương hiệu:</label>
    <p class="form-control-static">@Model.SupplierProduct.Brand ?? "N/A"</p>
</div>

