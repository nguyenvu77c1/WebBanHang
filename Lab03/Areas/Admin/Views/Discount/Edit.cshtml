@model Lab03.Models.Discount

<h2>Chỉnh Sửa Mã Giảm Giá</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Code">Mã</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DiscountAmount">Số Tiền Giảm</label>
        <input asp-for="DiscountAmount" class="form-control" />
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="StartDate">Ngày Bắt Đầu</label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="EndDate">Ngày Kết Thúc</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Trạng Thái (Đang hoạt động)</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
