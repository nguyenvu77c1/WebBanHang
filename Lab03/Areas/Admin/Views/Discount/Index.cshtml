@model IEnumerable<Lab03.Models.Discount>

<h2>Quản Lý Mã Giảm Giá</h2>

<a asp-action="Create" class="btn btn-primary">Thêm Mã Giảm Giá</a>

<table class="table">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Số Tiền Giảm</th>
            <th>Ngày Bắt Đầu</th>
            <th>Ngày Kết Thúc</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@string.Format("{0:#,##0} VNĐ", item.DiscountAmount)</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@(item.IsActive ? "Đang hoạt động" : "Ngừng hoạt động")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
